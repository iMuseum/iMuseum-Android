<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="50dp"
                  android:background="#ff88b9e9" android:weightSum="1">
        <ImageButton android:layout_width="52dp" android:layout_height="match_parent" android:id="@+id/imageButton"
                     android:src="@drawable/menu" android:background="#ff88b9e9"/>
        <TextView android:layout_width="286dp" android:layout_height="match_parent"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="iMuseum"
                  android:id="@+id/textView4" android:textColor="#ffffff" android:layout_gravity="center"
                  android:gravity="center_vertical|center_horizontal"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="35dp" android:orientation="horizontal"
                  android:id="@+id/linearLayout2" android:textAlignment="center" android:weightSum="1"
                  android:paddingLeft="0dp" android:layout_gravity="left" android:background="#C6C6C6">
        <ImageButton android:layout_width="52dp" android:layout_height="fill_parent" android:id="@+id/imageButton"
                     android:src="@drawable/back_black" android:background="#C6C6C6" android:adjustViewBounds="true"/>
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Showroom"
                  android:id="@+id/showroom_title" android:textColor="#383838" android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:background="@drawable/showroom_img_0">
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_showroom"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100px" android:layout_gravity="center" android:orientation="horizontal"
            android:id="@+id/title" android:textAlignment="center" android:gravity="center_horizontal"
            android:background="#ff212175" android:weightSum="1">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GREEN GLAZED POTTERY DOG"
                android:id="@+id/textView5" android:layout_gravity="center_vertical" android:gravity="center"
                android:textStyle="bold" android:textSize="20dp" android:textColor="#ffffffff"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView
            android:layout_width="500px"
            android:layout_height="500px"
            android:background="#ff9f9fff"
            android:id="@+id/exhibitView" android:src="@drawable/dog"/>
    <TextView android:layout_width="138dp" android:layout_height="match_parent" android:background="#ff7582bb"
              android:id="@+id/name" android:text="EXHIBITION HALL:" android:textSize="15dp" android:textStyle="bold"
              android:elegantTextHeight="true" android:textColor="#ffffffff"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="80px" android:background="#ff212175" android:layout_gravity="center_vertical"
                android:gravity="center|right">
            <ImageButton
                    android:layout_width="80px"
                    android:layout_height="match_parent"
                    android:id="@+id/like" android:src="@drawable/like" android:background="#ff212175"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIKE"
                    android:id="@+id/textView6" android:background="#ff212175" android:textColor="#FFFFFFFF"
                    android:textStyle="bold|italic" android:textSize="30px"/>
            <Space
                    android:layout_width="250px"
                    android:layout_height="match_parent"
                    />
            <ImageButton
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:id="@+id/go" android:src="@drawable/maps" android:background="#ff212175"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GO"
                    android:id="@+id/textView7" android:textColor="#FFFFFFFF" android:textSize="30px"
                    android:textStyle="bold|italic"/>
            <Space android:layout_width="250px" android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView android:layout_width="match_parent" android:layout_height="fill_parent" android:background="#ff979797"
                  android:id="@+id/introduce" android:text="INTRODUCTION:" android:textSize="15dp"
                  android:textStyle="bold" android:textIsSelectable="false" android:textColor="#ffffffff"/>
    </LinearLayout>

</LinearLayout>
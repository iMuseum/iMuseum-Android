<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="20dp" android:background="#ffffffff">

    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/exhibitionHall_img" android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="exhibitionHall_name"
            android:id="@+id/exhibitionHall_name" android:layout_gravity="center_horizontal"
            android:textSize="30dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/exhibitionHall_englishName" android:layout_gravity="center_horizontal"
            android:textSize="20dp"/>
</LinearLayout>